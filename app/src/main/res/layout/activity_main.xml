<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/aboutAct_scrollView"
        android:scrollbarSize="4dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Notification"
                android:id="@+id/showNotificationBut"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="showNotification"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop Notification"
                android:id="@+id/stopNotificationBut"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="stopNotification"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show settings"
                android:id="@+id/showsettings"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="showSettings"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert in 5 Seconds"
                android:id="@+id/alertButton"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="setAlarm"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Foreground Service"
                android:id="@+id/startForegroundService"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="startForegroundService"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Battery Status"
                android:id="@+id/batteryStatus"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="showBatteryStatus"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Image using DM"
                android:id="@+id/imageDownloader"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="downloadImage"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download File"
                android:id="@+id/startServiceButton"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:onClick="startFileService"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/downloadedText"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>